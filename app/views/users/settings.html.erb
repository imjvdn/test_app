<div class="container mt-4">
  <div class="row justify-content-center">
    <!-- Sidebar -->
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <!-- Sidebar content -->
          <h4>Profile Menu</h4>
          <ul class="list-group">
            <li class="list-group-item">
              <%= link_to 'View Profile', profile_path %>
            </li>
            <li class="list-group-item">
              <%= link_to 'Settings', settings_path %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Main Settings Content -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="mb-0">User Settings</h1>
        </div>
        <div class="card-body">
          <p class="lead">Update your personal settings below and click "Update Settings" to save.</p>

          <%= form_with(model: @user, url: update_settings_path, method: :patch, local: true, class: 'form') do |f| %>
            <hr>

            <div class="form-group">
              <label for="username">Change Your Username</label>
              <%= f.text_field :username, class: 'form-control', placeholder: 'Enter new username', id: 'username' %>
            </div>

            <hr>

            <div class="form-group">
              <label for="email">Update Your Email Address</label>
              <%= f.text_field :email, class: 'form-control', placeholder: 'Enter new email address', id: 'email' %>
            </div>

            <hr>

            <div class="form-group">
              <label for="password">Change Your Password</label>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Enter new password', id: 'password' %>
            </div>

            <div class="form-group">
              <label for="password_confirmation">Confirm New Password</label>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm new password', id: 'password_confirmation' %>
            </div>

            <hr>

            <div class="form-group text-center mb-0">
              <button type="submit" class="btn btn-primary">Update Settings</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
