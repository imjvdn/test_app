<!DOCTYPE html>
<html>
<head>
  <title>Test App</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <!-- Link to Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <!-- Include Sortable.js library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.14.0/Sortable.min.js"></script>

  <!-- Your jQuery script for article filtering -->
  <script>
    $(document).ready(function() {
      $('#search-input').on('input', function() {
        var searchValue = $(this).val().toLowerCase();

        $('.article-card').each(function() {
          var articleTitle = $(this).find('.card-title').text().toLowerCase();
          if (articleTitle.includes(searchValue)) {
            $(this).fadeIn('slow');
          } else {
            $(this).fadeOut('slow');
          }
        });
      });
    });
  </script>
</head>
<body>
<style>
  .timestamp {
    font-size: 0.8em;
    opacity: 0.7;
    position: absolute;
    bottom: 0;
    right: 0;
    margin: 8px;
  }
</style>
<p style="color: green"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Articles</h1>

  <form class="form-inline mb-3" id="search-form">
    <div class="input-group">
      <input id="search-input" class="form-control" type="search" placeholder="Search" aria-label="Search">
      <div class="input-group-append">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </div>
    </div>
  </form>

  <!-- Add the sortable-list class to the article list container -->
  <div class="row sortable-list" id="article-list">
    <% @articles.each do |article| %>
      <div class="col-md-4 mb-4 article-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title"><%= article.title %></h4>
            <p class="card-text"><%= article.description %></p>
            <%= link_to "Show this article", article, class: "btn btn-primary" %>
            <p class="timestamp"><%= article.created_at.strftime("%b %d, %Y") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to "New article", new_article_path, class: "btn btn-success" %>
  </div>
</div>

<!-- Initialize Sortable.js for reordering articles -->
<script>
  const sortableList = document.getElementById('article-list');
  new Sortable(sortableList, {
    animation: 150, // Animation duration in milliseconds
  });
</script>

</body>
</html>
