<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <div class="article">
      <h2><%= article.title %></h2>
      <p><%= article.description %></p>
      <%= link_to "Show this article", article, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= link_to "New article", new_article_path, class: "btn btn-success" %>
