<div class="container">
  <p style="color: green;"><%= notice %></p>
  
  <%= render @article %>

  <div class="mt-3">
    <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-primary' %>
    <%= link_to "Back to articles", articles_path, class: 'btn btn-secondary ml-2' %>
  </div>

  <div class="mt-3">
    <%= button_to "Destroy this article", @article, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
  </div>
</div>
