<div class="container">
  <% if notice %>
    <div class="alert alert-success" role="alert" style="margin-top: 20px;">
      <strong>Success!</strong> <%= notice %>
    </div>
  <% end %>

  <div class="card mt-3">
    <div class="card-header">
      <%= @article.title %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @article.title %></h5>
      <p class="card-text"><%= @article.description %></p>
      <div class="mt-3">
        <div class="d-inline-block">
          <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-primary' %>
        </div>
        <div class="d-inline-block">
          <%= button_to "Destroy this article", @article, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
    <div class="card-footer text-muted">
      <%= time_ago_in_words(@article.created_at) %> ago
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Back to articles", articles_path, class: 'btn btn-secondary ml-2' %>
  </div>
</div>
